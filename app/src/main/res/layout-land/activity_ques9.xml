<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grad9"
    android:fillViewport="true"
    tools:context="com.example.android.quizapp.ques9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ans9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/instruct_mgleft"
            android:layout_marginRight="@dimen/instruct_mgleft"
            android:layout_marginTop="@dimen/corneradius"
            android:text="@string/c9"
            android:textColor="@color/black"
            android:textSize="@dimen/ans_size"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/quest_mgleft"
                android:layout_marginRight="@dimen/quest_mgleft"
                android:layout_marginTop="@dimen/quest_mgleft"
                android:text="@string/q9"
                android:textSize="@dimen/textsize" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_height"
                android:layout_marginTop="@dimen/margin"
                android:src="@drawable/q9"
                android:visibility="visible" />

            <EditText
                android:id="@+id/add_ans9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ans7"
                android:layout_marginLeft="@dimen/quest_mgleft"
                android:layout_marginRight="@dimen/quest_mgleft"
                android:layout_marginTop="@dimen/ans_mgleft"
                android:gravity="center"
                android:hint="@string/hint"
                android:inputType="textCapCharacters"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/show9"
                    android:layout_width="@dimen/btnwidth"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/quest_mgleft"
                    android:layout_marginLeft="@dimen/quest_mgleft"
                    android:layout_marginTop="@dimen/ans_mgTop"
                    android:layout_weight="1"
                    android:background="@drawable/rnd"
                    android:onClick="ans9"
                    android:text="@string/show_answer" />

                <Button
                    android:id="@+id/sub9"
                    android:layout_width="@dimen/btnwidth"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/quest_mgleft"
                    android:layout_marginLeft="@dimen/quest_mgleft"
                    android:layout_marginRight="@dimen/quest_mgleft"
                    android:layout_marginTop="@dimen/ans_mgTop"
                    android:layout_weight="1"
                    android:background="@drawable/rnd"
                    android:onClick="answer9"
                    android:text="@string/submit"
                    android:textColor="@color/violet" />

                <Button
                    android:id="@+id/q10"
                    android:layout_width="@dimen/btnwidth"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/quest_mgleft"
                    android:layout_marginRight="@dimen/quest_mgleft"
                    android:layout_marginTop="@dimen/ans_mgTop"
                    android:layout_weight="1"
                    android:background="@drawable/rnd"
                    android:onClick="page10"
                    android:text="@string/next" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/appreciate"
            android:layout_width="@dimen/corneradius"
            android:layout_height="@dimen/corneradius"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/check_lanmgtop"
            android:src="@drawable/claps1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/negate"
            android:layout_width="@dimen/corneradius"
            android:layout_height="@dimen/corneradius"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/quest_mgleft"
            android:layout_marginTop="@dimen/check_lanmgtop"
            android:src="@drawable/wrong"
            android:visibility="invisible" />

    </RelativeLayout>
</ScrollView>
